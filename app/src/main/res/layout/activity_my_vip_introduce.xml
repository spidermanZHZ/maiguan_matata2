<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".my.activitys.MyVipIntroduceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/background_title"
        >
        <com.hjq.bar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/background_title"
            app:title="@string/my_vip"
            app:titleColor="#000000"
            app:titleSize="17sp"
            app:lineColor="@color/background_title"
            />
    </LinearLayout>

    <!-- 使用design提供的TabLayout app:tabPadding="14dp"-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_title"
        android:layout_marginBottom="25dp"
        app:tabMode="scrollable"
        app:tabTextColor="@color/black_66"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorColor="@color/background_title"
        app:tabGravity="fill">

    </android.support.design.widget.TabLayout>

    <!--&lt;!&ndash; ViewPager里存放碎片的集合&ndash;&gt;-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tablayout" />


</com.zhy.autolayout.AutoLinearLayout>