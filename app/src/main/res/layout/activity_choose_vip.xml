<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:layout_alignParentTop="true"
        >
        <com.hjq.bar.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            app:title="开通会员"
            app:leftColor="@color/Et_hintText"
            app:titleColor="#000000"
            app:titleSize="17sp"
            app:backButton="true"
            app:lineColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="17dp"
        android:orientation="vertical"
        android:background="@drawable/cornerbg_white_single"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            >
            <ImageView
                android:id="@+id/art_buy_iv"
                android:contentDescription="@string/at_join_buy"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/black666"
                    android:textSize="13sp"
                    android:text=" 会员开通限时优惠"
                    />

                <TextView
                    android:id="@+id/tv_vip_bug_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_gravity="center"
                    android:textColor="@color/tv_service_code"
                    android:textSize="15sp"
                    />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/Tv_text"
            android:textSize="15sp"
            android:text="请选择想要开通的会员类型"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/Tv_text"
                android:textSize="15sp"
                android:text="会员类型"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_buy_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/art_btn_buy_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="71dp"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:textAllCaps="false"
            android:text="@string/art_btn_confirm"
            android:textSize="14sp"
            android:background="@drawable/login_btn_style"
            />
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>