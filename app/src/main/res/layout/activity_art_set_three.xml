<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".homepage.activitys.ArtSetThreeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        >
        <com.hjq.bar.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/background_art_set"
            app:title="定制报告"
            app:titleColor="#000000"
            app:leftTitle="返回首页"
            app:leftColor="@color/black"
            app:rightTitle="分享"
            app:backButton="false"
            app:titleSize="17sp"
            app:lineColor="@color/background_art_set"
            app:rightColor="@color/Tv_text"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/art_bg"
        android:orientation="vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ll_bg_corners"
        >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="成长计划"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="17sp"
            android:textColor="@color/Tv_text"
            />
        <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/line_chart"
                    android:layout_width="fill_parent"
                    android:layout_height="260dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="学习建议"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="8dp"
            android:textSize="17sp"
            android:textColor="@color/Tv_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/study_advice"
            android:textColor="@color/black666"
            android:textSize="14sp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="推荐课程"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="8dp"
        android:textSize="17sp"
        android:textColor="@color/Tv_text"
        />

        <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <Button
            android:id="@+id/art_set_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="71dp"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:textAllCaps="false"
            android:text="立即学习"
            android:textSize="14sp"
            android:background="@drawable/login_btn_style"
            />
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>