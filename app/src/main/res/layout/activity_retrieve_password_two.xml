<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.activitys.RetrievePasswordTwoActivity"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/background_title"
        >
        <com.hjq.bar.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/background_title"
            app:title="@string/retrieve_changepassword"
            app:titleColor="#000000"
            app:titleSize="17sp"
            app:lineColor="@color/white"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="59dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/login_linearlayout_style"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginLeft="23dp"
                android:src="@mipmap/login_password"
                />
            <EditText
                android:id="@+id/login_et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_gravity="center"
                android:hint="@string/retrieve_et_newpassword"
                android:textSize="14sp"
                android:textColor="@color/Et_hintText"
                android:background="@drawable/login_linearlayout_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/login_linearlayout_style"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginLeft="23dp"
                android:src="@mipmap/login_password"
                />
            <EditText
                android:id="@+id/login_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_gravity="center"
                android:hint="@string/retrieve_et_confirmpassword"
                android:textSize="14sp"
                android:textColor="@color/Et_hintText"
                android:background="@drawable/login_linearlayout_style"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/retrieve_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="18dp"
        android:textAllCaps="false"
        android:text="@string/retrieve_btn_changepassword"
        android:textSize="14sp"
        android:textColor="@color/Tv_text"
        android:background="@drawable/login_btn_style"
        />
</com.zhy.autolayout.AutoLinearLayout>