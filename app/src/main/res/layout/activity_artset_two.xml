<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".homepage.activitys.ArtsetTwoActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            >
            <com.hjq.bar.TitleBar
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/background_art_set"
                app:title="@string/art_set"
                app:titleColor="#000000"
                app:titleSize="17sp"
                app:lineColor="@color/background_art_set"
                app:rightTitle="确认提交"
                app:rightSize="16sp"
                app:rightColor="@color/Tv_text"
                />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/art_bg"
        android:orientation="vertical"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ll_bg_corners"
            >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="30dp"
                        android:src="@mipmap/ym_x"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/rgDepartment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="请选择学习的具体方向"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:textColor="@color/Tv_text"
                    />
                <RadioGroup
                    android:id="@+id/rg_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@color/white">
                    <RadioButton
                        android:id="@+id/rb_department1"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="吉他"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />
                    <RadioButton
                        android:id="@+id/rb_department2"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="钢琴"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />
                    <RadioButton
                        android:id="@+id/rb_department3"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="架子鼓"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />
                    <RadioButton
                        android:id="@+id/rb_department4"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="小提琴"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />

                </RadioGroup>
                <EditText
                    android:id="@+id/et_department5"
                    android:visibility="gone"
                    android:layout_width="220dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="21dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:textColor="@color/black666"
                    android:hint="其它(请填写)"
                    android:textColorHint="@color/black"
                    android:background="@drawable/rg_btn_bg"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="请选择学习的目标"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:textColor="@color/Tv_text"
                    android:layout_marginTop="43dp"
                    />
                <RadioGroup
                    android:id="@+id/rg_student_want"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@color/white">
                    <RadioButton
                        android:id="@+id/rb_want1"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="培养终生的兴趣爱好"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />
                    <RadioButton
                    android:id="@+id/rb_want4"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="丰富自己的艺术生活"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                    />
                    <RadioButton
                        android:id="@+id/rb_want2"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="考取知名艺术院校"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />
                    <RadioButton
                        android:id="@+id/rb_want3"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="参加海外名校艺术留学"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />

                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="请选择为达到目标能接受的学习费用"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:textColor="@color/Tv_text"
                    android:layout_marginTop="56dp"
                    />
                <RadioGroup
                    android:id="@+id/rg_student_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="21dp"
                    >
                    <RadioButton
                        android:id="@+id/rb_price1"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="200元以下"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />
                    <RadioButton
                    android:id="@+id/rb_price2"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="200-500元"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                    />
                    <RadioButton
                        android:id="@+id/rb_price3"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="500元及以上"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="请选择期待参加的艺术活动"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:textColor="@color/Tv_text"
                    android:layout_marginTop="43dp"
                    />
                <RadioGroup
                    android:id="@+id/rg_student_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@color/white">
                    <RadioButton
                        android:id="@+id/rb_action1"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="艺术营地活动"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />
                    <RadioButton
                        android:id="@+id/rb_action2"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="大师沙龙分享会"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />
                    <RadioButton
                        android:id="@+id/rb_action3"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="海内外艺术类游学"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />
                    <RadioButton
                        android:id="@+id/rb_action4"
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="艺术类展出或展览"
                        android:textSize="14sp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/rg_btn_change"
                        />

                </RadioGroup>
                <ImageView
                    android:id="@+id/art_set_iv1"
                    android:layout_marginTop="43dp"
                    android:layout_marginBottom="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/dz4_defaultx"
                    />
            </LinearLayout>
        </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>