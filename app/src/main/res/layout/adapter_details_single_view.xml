<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <recycler.coverflow.RecyclerCoverFlow
        android:id="@+id/music_three_cover_flow_rv"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/course_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="19dp"
            android:text="课程名字"
            android:textColor="@color/Tv_text"
            android:textSize="15sp"
            android:includeFontPadding="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/course_details_label"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="初级课程 | 共10节"
                android:layout_gravity="center"
                android:textColor="@color/black666"
                android:textSize="12sp"
                android:includeFontPadding="true"
                />
            <LinearLayout
                android:id="@+id/course_details_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/course_details_collect_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/shoucang2" />
                <TextView
                    android:id="@+id/course_details_collect_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textColor="@color/Tv_text"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:includeFontPadding="true"
                    />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/course_details_work_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售100"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/tv_service_code"
            android:textSize="11sp"
            android:includeFontPadding="true"
            />
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>