<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        >
        <TextView
            android:id="@+id/course_details_catalog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="课程001"
            android:textColor="@color/Tv_text"
            android:textSize="15sp"
            android:includeFontPadding="true"
            />
        <TextView
            android:id="@+id/course_details_catalog_all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="时间"
            android:textColor="@color/black666"
            android:textSize="13sp"
            android:includeFontPadding="true"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/course_details_catalog_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:contentDescription="@string/music_course"
        android:layout_marginRight="9dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />

</com.zhy.autolayout.AutoLinearLayout>